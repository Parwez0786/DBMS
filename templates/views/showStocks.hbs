<html>

<head>
    <title>Stock Prices</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        h1 {
            text-align: center;
            margin-top: 30px;
            color: #333;
        }

        .stock-container {
            display: inline-block;
            position: relative;
            margin: 5px auto;
            border: 2px solid #333;
            width: 30%;
            background-color: #fff;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 10px;
        }

        .stock-header {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
            font-weight: bold;
            font-size: 1.2rem;
            margin-bottom: 10px;
            border-radius:
                10px;
        }

        .stock-price {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .stock-change {
            font-size: 1.2rem;
            margin-bottom:
                0;
        }

        .stock-positive {
            color: green;
        }

        .stock-negative {
            color: red;
        }

        .insideBtn {
            color: #f0f0f0;
            text-decoration: none;
            border: 2px solid #333;
            background-color: #e9780d;
            margin: 2px;
            padding: 4px 4px;
            border-radius: 5px;
        }
        .container{
            margin: 0px auto;
            justify-self: center;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Stocks</h1>
        {{#if message}}
        <p id ="message" style="color:green; text-align:center;">{{message}}</p>
        {{/if}}
        <div class="containers">
            {{#each result}}
            <div class="stock-container" id="par">
                <div class="stock-header">{{this.name}}</div>
                <div class="stock-price">Price: {{this.price}}</div>
                <div class="stock-change stock-positive">Change Percentage: +0.23%</div><br>
                <a class="insideBtn" href="/api/showUserStocks/buy?id={{this.Id}}">Buy</a>
                <a class="insideBtn" href="">history</a>
            </div>
            {{/each}}
        </div>
    </div>

    <script>
       var message = document.getElementById('message');
       setTimeout(()=>{
        message.innerHTML="";
       },3000)

    </script>
</body>

</html>